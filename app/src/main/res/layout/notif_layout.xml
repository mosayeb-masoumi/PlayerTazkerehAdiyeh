<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_horizontal|center_vertical">


    <ImageView
        android:id="@+id/img_notif_large"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/ic_launcher_background" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/close_black" />


        <ImageView
            android:id="@+id/img_rewind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/fast_rewind" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/img_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/play2" />

            <ImageView
                android:id="@+id/img_pause"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pause2" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_forward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/forward" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_title_notif_adiye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_toStartOf="@+id/img_notif_large"
        android:text="آل یاسین"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_singer_notif_adiye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_title_notif_adiye"
        android:layout_marginStart="2dp"
        android:layout_toStartOf="@+id/img_notif_large"
        android:text="کریمی"
        android:textColor="@color/black"
        android:textSize="14sp" />



    <!--    <ImageView-->
    <!--        android:id="@+id/img_font"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="20dp"-->
    <!--        android:clickable="true"-->
    <!--        android:focusable="true" />-->



</RelativeLayout>